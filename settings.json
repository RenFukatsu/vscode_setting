{
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Material Theme Darker High Contrast",
    "C_Cpp.updateChannel": "Insiders",
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.insertSpaces": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "files.autoGuessEncoding": false,
    "files.trimFinalNewlines": false,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",
    "workbench.editor.labelFormat": "short",
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.tabCloseButton": "off",
    "workbench.startupEditor": "none",
    "workbench.editor.openPositioning": "first",
    "workbench.activityBar.visible": true,
    "explorer.openEditors.visible": 0,
    "workbench.editor.showTabs": true,
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "debug.inlineValues": true,
    "window.zoomLevel": 0,
    "terminal.integrated.copyOnSelection": true,
    "[cpp]": {
        "editor.tabSize": 4
    },

    // vim
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.easymotion": true,
    "vim.visualstar": true,
    "vim.ignorecase": true,
    "vim.incsearch": true,
    "vim.normalModeKeyBindings": [
        {"before": ["J"], "after": ["1", "0", "j"]},
        {"before": ["K"], "after": ["1", "0", "k"]},
        {"before": ["H"], "after": ["1", "0", "h"]},
        {"before": ["L"], "after": ["1", "0", "l"]},
        {"before": ["f"], "commands": ["editor.action.revealDefinition"]},
        {"before": ["F"], "commands": ["editor.action.goToReferences"]},
        {"before": ["U"], "commands": ["cursorUndo"]},
        {"before": ["R"], "commands": ["cursorRedo"]},
        {"before": ["g", "f"], "commands": ["actions.find"]},
        {"before": ["g", "h"], "commands": ["editor.action.startFindReplaceAction"]},
        {"before": ["ctrl+a"], "after": ["g", "g", "V", "G"]}
    ],
    "vim.insertModeKeyBindings": [
        {"before": ["j", "j"], "after": ["Esc"]},
        {"before": ["j", "ctrl+l"], "after": ["j", "right"]},
        {"before": ["ctrl+l"], "after": ["right"]},
        {"before": ["ctrl+j"], "commands": ["editor.action.insertLineAfter"]}
    ],

    // git
    "git.autofetch": true
}